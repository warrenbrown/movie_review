
  <%= simple_form_for(@movie, html: { multipart: true}) do |f| %>
    <%= select_tag(:category_id, options_for_select(@categories), prompt: "Select a category", class:'form-control') %>
    <%= f.input :movie_image, as: :file %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :genre %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
