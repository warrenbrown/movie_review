<p><%= review.rating %></p>
<p><%= review.comment %></p>
<div class="actions">
  <% if user_signed_in? && review.user_id == current_user.id %>
    <%= link_to 'Edit', edit_movie_review_path(@movie,review), class: 'btn btn-primary' %>
    <%= link_to 'Delete', movie_review_path(review.movie, review), method: :delete, data:{ confirm: 'Are you sure you want to delete this review!'}, class: 'btn btn-danger' %>
  <% end %>
</div>
